# SIGNOLOGOS Environment Variables

# Development
VITE_APP_NAME=SIGNOLOGOS
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION="Traductor de lengua a signos potenciado con IA"

# MediaPipe Configuration
VITE_MEDIAPIPE_MODEL_PATH=/models/hand_landmarker.task
VITE_MEDIAPIPE_MAX_HANDS=2
VITE_MEDIAPIPE_MIN_DETECTION_CONFIDENCE=0.7
VITE_MEDIAPIPE_MIN_TRACKING_CONFIDENCE=0.5

# TensorFlow.js Configuration
VITE_TFJS_BACKEND=webgl
VITE_TFJS_DEBUG=false

# Camera Configuration
VITE_CAMERA_WIDTH=1280
VITE_CAMERA_HEIGHT=720
VITE_CAMERA_FPS=30

# ML Model Configuration
VITE_MODEL_SEQUENCE_LENGTH=30
VITE_MODEL_LSTM_UNITS=128
VITE_MODEL_LEARNING_RATE=0.001
VITE_MODEL_BATCH_SIZE=32

# Performance Configuration
VITE_DETECTION_FPS_LIMIT=15
VITE_CANVAS_OPTIMIZATION=true
VITE_MEMORY_CLEANUP_INTERVAL=5000

# PWA Configuration
VITE_PWA_ENABLED=true
VITE_PWA_CACHE_NAME=signologos-cache-v1

# Analytics (Optional - set to false for privacy)
VITE_ANALYTICS_ENABLED=false

# Development/Debug flags
VITE_DEBUG_MODE=false
VITE_SHOW_FPS_COUNTER=false
VITE_SHOW_LANDMARKS=true
VITE_LOG_LEVEL=info
